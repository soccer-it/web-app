.loader {
  width: 100%;
  height: 95vh;
  background: #fff;
  .wrapper {
    position: absolute;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 50%;
    text-align: center;
    width: 100%;
    .logo {
      width: 118.9px;
      height: 105.5px;
      margin-left: 20px;
    }
    .title, .description {
      font-family: Montserrat;
    }
    .title {
      text-transform: uppercase;
      font-size: 48px;
      color: #000;
      margin-bottom: 12px;
      margin-top: 10px;
      line-height: 34px;
      font-weight: bold;
      > span {
        color: #EB250B;
        line-height: 34px;
        font-weight: bold;
      }  
    }
    .description {
      font-size: 16px;
      color: #000;
      font-weight: 200;
      line-height: 9px;
    }
  } 
}